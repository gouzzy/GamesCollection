{% extends "GouzzyGamesCollectionBundle::layout.html.twig" %}
{% block title %}{{ parent() }} - Index{% endblock %}
{% block body %}
    <div class="container">
        {% for brand in brands %}
            <div class="game">
                <img src="{{ asset('img/brands/' ~ brand.getMasterPicture().getName()) }}" width="100" height="100" /> <a href="{{ path('gouzzy_games_collection_generic_console_list_with_brandId', {'brandId': brand.id}) }}" >{{ brand.getName() }}</a></span> (<span><a href="{{ brand.getWikiLink() }}" target="_blank">{{ brand.getWikiLink() }}</a>)
            </div>
        {% else %}
            <p>Pas de marques</p>
        {% endfor %}
    </div>
{% endblock %}