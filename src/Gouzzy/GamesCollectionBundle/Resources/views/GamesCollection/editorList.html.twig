{% extends "GouzzyGamesCollectionBundle::layout.html.twig" %}
{% block title %}{{ parent() }} - Index{% endblock %}
{% block body %}
    <div class="container">
        {% for editor in editors %}
            <div class="game">
                <img src="{{ asset('img/editors/' ~ editor.getMasterPicture()) }}" width="100" height="100" /> <a href="{{ path('gouzzy_games_collection_generic_game_list_with_editorId', {'editorId': editor.id}) }}" >{{ editor.getName() }}</a></span> (<span><a href="{{ editor.getWikiLink() }}" target="_blank">{{ editor.getWikiLink() }}</a>)
            </div>
        {% else %}
            <p>Pas de marques</p>
        {% endfor %}
    </div>
{% endblock %}